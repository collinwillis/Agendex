@model Agendex.Models.Company
@using Agendex.Controllers
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_CompanyHomeLayout.cshtml";
}



<script>

    document.addEventListener('DOMContentLoaded', function () {


        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            editable: false,
            selectable: true,
            businessHours: true,
            dayMaxEvents: true, // allow "more" link when too many events
            events: '@Url.RouteUrl(new{ action="PopulateEvents", controller="Home"})',
            eventClick: function(info)
            {
                alert(info.event.title + "\nStart: " + info.event.start + "\nEnd: " + info.event.end);

            }
        });

        calendar.render();
    });

</script>
<style>

    body {
        margin: 40px 10px;
        padding: 0;
        font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
        font-size: 14px;
    }

    #calendar {
        max-width: 1100px;
        margin: 0 auto;
    }
</style>

<body>

    <div id='calendar'></div>

</body>

